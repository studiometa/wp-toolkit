{
  "name": "studiometa/wp-toolkit",
  "version": "1.0.0",
  "description": "WordPress utilities for Studio Meta.",
  "license": "MIT",
  "type": "library",
  "require": {
    "php": "^7.3|^8.0",
    "symfony/yaml": "^5.1",
    "studiometa/webpack-config": "^4.0",
    "djboris88/twig-commented-include": "dev-master",
    "twig/twig": "^2.0|^3.0",
    "studiometa/ui": "^0.2.40"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.4",
    "wp-coding-standards/wpcs": "^2.1",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7.0",
    "szepeviktor/phpstan-wordpress": "^1.1",
    "php-stubs/wordpress-stubs": "^5.5",
    "phpunit/phpunit": "^9.0",
    "yoast/phpunit-polyfills": "^1.0"
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/EstudioNexos/twig-commented-include"
    }
  ],
  "autoload": {
    "psr-4": {
      "Studiometa\\WPToolkit\\": "src/"
    }
  },
  "scripts": {
    "phpcs": "phpcs -s --colors --standard=./phpcs.xml",
    "phpstan": "phpstan analyse --memory-limit=512M",
    "phpunit": "phpunit"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "phpstan/extension-installer": true
    }
  }
}
