{
  "name": "studiometa/wp-toolkit",
  "version": "1.0.0-alpha2",
  "description": "WordPress utilities for Studio Meta.",
  "license": "MIT",
  "type": "library",
  "require": {
    "php": "^7.3",
    "phpstan/phpstan": "^0.12.55",
    "symfony/yaml": "^5.1",
    "szepeviktor/phpstan-wordpress": "^0.7.1"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.4",
    "wp-coding-standards/wpcs": "^2.1",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.5.0",
    "php-stubs/wordpress-stubs": "^5.5",
    "phpunit/phpunit": "^9.3.10",
    "pestphp/pest": "^0.3.12"
  },
  "autoload": {
    "psr-4": {
      "Studiometa\\WPToolkit\\": "src/"
    }
  },
  "scripts": {
    "phpcs": "phpcs -s --colors --standard=./phpcs.xml",
    "phpstan": "phpstan analyse --memory-limit=512M",
    "pest": "pest"
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
